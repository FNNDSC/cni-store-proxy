{
  "name": "cni-store-proxy",
  "version": "1.0.0",
  "description": "Reverse proxy for the ChRIS_store API to automatically register and run uploaded plugins",
  "main": "server.js",
  "scripts": {
    "serve": "node server.js",
    "postinstall": "git submodule update --init && [ -e .env ] || ln -sv test/local.env .env",
    "prestart": "yarn run cube:restart && ./prepare.sh",
    "start": "yarn run serve",
    "cube:up": "cube/minimake/minimake.sh",
    "cube:down": "cube/minimake/unmake.sh",
    "cube:restart": "yarn run cube:down && yarn run cube:up",
    "pretest": "yarn run prestart",
    "test": "jest --silent",
    "posttest": "yarn run cube:down"
  },
  "jest": {
    "testMatch": [ "<rootDir>/__tests__/**/*.test.js" ],
    "globalSetup": "<rootDir>/__tests__/setup.js"
  },
  "repository": "https://github.com/fnndsc/cni-store-proxy",
  "author": "Jennings Zhang <Jennings.Zhang@childrens.harvard.edu>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "axios": "^0.19.2",
    "colors": "^1.4.0",
    "express": "^4.17.1",
    "http-proxy": "^1.18.1"
  },
  "devDependencies": {
    "dotenv": "^8.2.0",
    "jest": "^26.6.3",
    "supertest": "^6.0.1"
  }
}
